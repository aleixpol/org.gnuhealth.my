{
    "id": "org.gnuhealth.my",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "mygnuhealth",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [ "--share=ipc", "--socket=x11", "--socket=wayland", "--device=dri" ],

    "modules": [
        {
            "name": "PySide2",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_TESTS=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.qt.io/official_releases/QtForPython/pyside2/PySide2-5.15.1-src/pyside-setup-opensource-src-5.15.1.tar.xz",
                    "sha256": "f175c1d8813257904cf0efeb58e44f68d53b9916f73adaf9ce19514c0271c3fa"
                },
                {
                    "type": "shell",
                    "commands": [
                        "mkdir -p /app/include/qt5tmp && cp -R /usr/include/Qt* /app/include/qt5tmp # https://bugreports.qt.io/broswse/PYSIDE-787",
                        "sed -i 's|--include-paths=|--include-paths=/app/include/qt5tmp:|' sources/pyside2/cmake/Macros/PySideModules.cmake"
                    ]
                }
            ]
        },
        "python-matplotlib.json",
        "python-bcrypt.json",
        {
            "name": "tinydb",
            "buildsystem": "simple",
            "ensure-writable" : [
                "/lib/python*/site-packages/easy-install.pth"
            ],
            "build-commands": [
                "python3 setup.py build",
                "python3 setup.py install --prefix /app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/t/tinydb/tinydb-4.3.0.tar.gz",
                    "sha256": "1d102d06f9bb22d739d8061b490c64d420de70dca5f95ebd43a492c43c7bd303"
                }
            ]
        },
        {
            "name" : "python-requests",
            "buildsystem" : "simple",
            "build-commands" : [
                "pip3 install --prefix=/app requests-*"
            ],
            "sources" : [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/39/fc/f91eac5a39a65f75a7adb58eac7fa78871ea9872283fb9c44e6545998134/requests-2.25.0-py2.py3-none-any.whl",
                    "sha256": "e786fa28d8c9154e6a4de5d46a1d921b8749f8b74e28bde23768e5e16eece998"
                }
            ]
        },
        {
            "name": "MyGNUHealth",
            "buildsystem" : "simple",
            "build-commands" : [
                "python3 setup.py build",
                "python3 setup.py install --prefix=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/M/MyGNUHealth/MyGNUHealth-0.7a6.tar.gz",
                    "sha256": "f534798aa576484a413a2b88ab695d21f55130267a7be66eb243a47c2d85f87e"
                },
                {
                    "type": "patch",
                    "path": "metadata.patch"
                }
            ]
        }
    ]
}
